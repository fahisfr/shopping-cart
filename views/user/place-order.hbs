<div class="row" style="padding: 40PX;">
    <div class="col-md-8 mb-4">
        <div class="card mb-4">
            <div class="card-header py-3">
                <h5 class="mb-0">Enter delivery Details</h5>
            </div>
            <div class="card-body">
                <form>
                    

          
                    <!-- Text input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form6Example4">Address</label>
                        <input type="text" id="address" name="address" class="form-control" />
                       
                    </div>

      
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form6Example4">Pincode</label>
                        <input type="text" id="pincode" name="pincode" class="form-control" />
                    </div>


                    <div class="form-outline mb-4">
                        <label class="form-label" for="form6Example4">Mobile</label>
                        <input type="text" id="mobile"  name="mobile" class="form-control" />
                    </div>

                
                    <!-- Checkbox -->
                    <div class="form-check d-flex justify-content-center mb-2">
                        
                        <label class="form-check-label" for="form6Example8">
                          
                        </label>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card mb-4">
            <div class="card-header py-3">
                <h5 class="mb-0">Total Amount</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                 <div class="payment">
                    <label for="" class="radio-inline">
                        <input type="radio" name="payment-method" value="ON LIE" checked>Online Payment
                    </label>
                    <br>
                    <label for="" class="radio-inline">   
                        <input type="radio" name="payment-method" value="COD" checked>COD
                    </label>
                 </div>
                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                        <div>
                            <strong>Total amount</strong>
                            <strong>
                                <p class="mb-0">(including VAT)</p>
                            </strong>
                        </div>
                        <span><strong>{{total}}</strong></span>
                    </li>
                </ul>

                <button type="button" class="btn btn-primary btn-lg btn-block">
                    Make purchase
                </button>
            </div>
        </div>
    </div>
</div>