<section>
    <div class="container">
        <dvi class="row">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Products</a>
        </dvi>

    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">NO</th>
                <th scope="col">Title</th>
                <th scope="col">Category</th>
                <th scope="col">Description</th>
                <th>Imag</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">1</th>
                <td>{{this.name}}</td>
                <td>{{this.type}}</td>
                <td>{{this.des}}</td>
                <td><img style="width: 50px; height:50px;" src="{{this.image}}" alt=""></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>