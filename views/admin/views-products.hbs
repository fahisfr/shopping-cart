<section >
    <div class="container" >
        <dvi class="row">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Products</a>
        </dvi>

    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">NO</th>
                <th scope="col">Title</th>
                <th scope="col">Category</th>
                <th scope="col">Price</th>
                <th scope="col">Description</th>
                <th>Imag</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">1</th>
                <td>{{this.name}}</td>
                <td>{{this.category}}</td>
                <td>{{this.price}}</td>
                <td>{{this.description}}</td>
                <td><img style="width: 50px; height:50px;" src="/product-images/{{this.name}}.jpg" alt=""></td>
                <td >
                    <a href="/admin/edit-product" class="btn btn-primary">Edit</a>
                    <a href="/admin/delete-product/{{this.name}}" class="btn btn-danger" onclick=" return confirm('are you want to delete {{this.name}}') "  >Delete</a>
                </td>
                
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>